{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "tests/unit/**/*"
    ]
}